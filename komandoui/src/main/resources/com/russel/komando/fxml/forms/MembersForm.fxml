<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.russel.komando.formcontroller.MembersFormController"
      alignment="CENTER"
      stylesheets="@../../css/form.css"
      styleClass="root">
    <Label styleClass="form-title" text="Edit Project Team Members" />
    <!--=====================================================================================-->
    <VBox styleClass="form-item">
        <ListView fx:id="employeeListView" styleClass="solo-list-view"/>
    </VBox>
    <!--=====================================================================================-->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" id="form-button" styleClass="save-button" onAction="#handleSave" />
        <Button text="Cancel" id="form-button" styleClass="cancel-button" onAction="#handleCancel" />
    </HBox>
    <!--=====================================================================================-->
</VBox>
